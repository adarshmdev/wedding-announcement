                                <% if (wishes && wishes.length > 0) { %>
                                    <% wishes.forEach(wish => { %>
                                        <div class="wish-slide">
                                            <div class="wish-card">
                                                <div class="wish-content">
                                                    <p><%= wish.message %></p>
                                                    <div class="wish-author">- <%= wish.name %></div>
                                                </div>
                                            </div>
                                        </div>
                                    <% }); %>
                                <% } else { %>
                                    <div class="wish-slide">
                                        <div class="wish-card">
                                            <div class="wish-content">
                                                <p>No wishes yet. Be the first to bless the couple!</p>
                                            </div>
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
        
