        .wishes-section {
            background-color: #f9f5f0;
            padding: 80px 0;
            overflow: hidden;
        }
        
        .wishes-carousel-container {
            position: relative;
            width: 100%;
            overflow: hidden;
        }
        
        .wishes-track {
            display: flex;
            gap: 20px;
            transition: transform 0.5s ease;
            width: max-content;
        }
        
        .wish-slide {
            flex: 0 0 auto;
            width: calc(100vw - 40px);
            max-width: 350px;
        }
        
        .wish-card {
            background-color: white;
            border-radius: 10px;
            padding: 25px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            min-height: 250px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
        
        .wish-content p {
            color: #333;
            font-style: italic;
            margin-bottom: 15px;
        }
        
        .wish-author {
            text-align: right;
            font-weight: 600;
            color: #666;
        }
        
        .btn-primary {
            background-color: #d3a625;
            border-color: #d3a625;
            padding: 12px 30px;
            transition: all 0.3s ease;
        }
        
        .btn-primary:hover {
            background-color: #b88d1f;
            border-color: #b88d1f;
        }
        
        @media (max-width: 768px) {
            .wish-slide {
                width: calc(100vw - 60px);
            }
        }

        .swiper-button-next, 
    .swiper-button-prev {
        color: rgba(255, 255, 255, 0.8);
        background-color: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        width: 70px;
        height: 70px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .swiper-button-next:hover, 
    .swiper-button-prev:hover {
        background-color: rgba(255, 255, 255, 0.4);
        color: rgba(255, 255, 255, 1);
        transform: translateY(-50%) scale(1.1);
    }

    .swiper-button-next i, 
    .swiper-button-prev i {
        font-size: 35px;
    }

    .swiper-button-next {
        right: 20px;
    }

    .swiper-button-prev {
        left: 20px;
    }

    /* Responsive Adjustments */
    @media (max-width: 768px) {
        .swiper-button-next, 
        .swiper-button-prev {
            width: 50px;
            height: 50px;
        }

        .swiper-button-next i, 
        .swiper-button-prev i {
            font-size: 24px;
        }
    }

    @media (max-width: 480px) {
        .swiper-button-next, 
        .swiper-button-prev {
            width: 40px;
            height: 40px;
            background-color: rgba(255, 255, 255, 0.3);
        }

        .swiper-button-next i, 
        .swiper-button-prev i {
            font-size: 20px;
        }
    }
        

