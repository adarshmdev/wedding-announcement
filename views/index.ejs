    // Fetch weather data for each event
    async function fetchWeather() {
        for (const event of events) {
            try {
                const response = await fetch(
                    `https://api.openweathermap.org/data/2.5/forecast?q=${encodeURIComponent(event.location)}&appid=${API_KEY}&units=metric`
                );
                const data = await response.json();

                // Find forecast for the specific date
                const forecast = data.list.find(item => item.dt_txt.startsWith(event.date));
                const weatherHtml = forecast
                    ? `<p><strong>Weather:</strong> ${forecast.weather[0].description}, ${forecast.main.temp}°C</p>`
                    : '<p>Weather data not available</p>';

                // Update the corresponding event's weather placeholder
                document.getElementById(event.id).innerHTML = weatherHtml;
            } catch (error) {
                console.error('Error fetching weather data:', error);
                document.getElementById(event.id).innerHTML = '<p>Failed to load weather info</p>';
            }
        }
    }

    // Run fetchWeather on page load
    document.addEventListener('DOMContentLoaded', fetchWeather);
