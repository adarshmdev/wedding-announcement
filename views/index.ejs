       document.addEventListener('DOMContentLoaded', function() {
    const wishForm = document.getElementById('wishForm');
    const wishesTrack = document.getElementById('wishesTrack');
    let slideIndex = 0;
    let isSliding = false;

    function checkWishesSliding() {
        const wishSlides = wishesTrack.querySelectorAll('.wish-slide');
        const trackWidth = wishesTrack.scrollWidth;
        const containerWidth = wishesTrack.parentElement.clientWidth;

        isSliding = trackWidth > containerWidth;
        return isSliding;
    }

    function startSliding() {
        const wishSlides = wishesTrack.querySelectorAll('.wish-slide');
        
        if (isSliding && wishSlides.length > 1) {
            slideIndex = (slideIndex + 1) % wishSlides.length;
            const slideWidth = wishSlides[0].offsetWidth + 20;
            const offset = -slideIndex * slideWidth;
            wishesTrack.style.transform = `translateX(${offset}px)`;
        }
    }

    let slidingInterval = null;
    function initializeSliding() {
        if (slidingInterval) {
            clearInterval(slidingInterval);
        }

        if (checkWishesSliding()) {
            slidingInterval = setInterval(startSliding, 2000);
        }
    }

    initializeSliding();

    if (wishForm) {
        wishForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Use form's elements to get values
            const name = this.querySelector('input[name="name"]').value;
            const message = this.querySelector('textarea[name="message"]').value;

            // AJAX request to submit wish
            fetch('/wishes', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ name, message })
            })
            .then(response => response.json())
            .then(data => {
                // Create new wish slide
                const newWishSlide = document.createElement('div');
                newWishSlide.classList.add('wish-slide');
                newWishSlide.innerHTML = `
                    <div class="wish-card">
                        <div class="wish-content">
                            <p>"${message}"</p>
                            <div class="wish-author">- ${name}</div>
                        </div>
                    </div>
                `;

                // Add to wishes track
                wishesTrack.appendChild(newWishSlide);

                // Reinitialize sliding
                initializeSliding();

                // Close modal (requires Bootstrap)
                const wishModal = bootstrap.Modal.getInstance(document.getElementById('wishModal'));
                if (wishModal) {
                    wishModal.hide();
                }

                // Reset form
                this.reset();
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Failed to submit wish. Please try again.');
            });
        });
    }

    window.addEventListener('resize', initializeSliding);
});
